rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Regla para colección de atletas
    match /athletes/{athleteId} {
      // Permitir lectura si el usuario está autenticado
      allow read: if request.auth != null;
      
      // Permitir escritura solo si el usuario está modificando su propio documento
      allow write: if request.auth != null && request.auth.uid == athleteId;
    }
    
    // Regla para planes de entrenamiento
    match /plans/{athleteId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == athleteId;
    }
    
    // Regla para macrociclos
    match /macrocycles/{athleteId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == athleteId;
    }
    
    // Regla para historial de chat
    match /chats/{athleteId} {
      allow read: if request.auth != null && request.auth.uid == athleteId;
      allow write: if request.auth != null && request.auth.uid == athleteId;
    }
    
    // Regla temporal para staff (puedes ajustarla después)
    match /staff/{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
