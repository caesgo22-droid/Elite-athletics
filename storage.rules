rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    // We can't easily check Firestore from Storage rules for roles
    // So we'll allow access if either owner OR the path suggests collaboration
    
    // Videos: Athletes can upload to their own folder
    match /videos/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Chat attachments: Only participants can access
    match /chat/{roomId}/{fileName} {
      function isParticipant() {
        let parts = roomId.split('_');
        return isAuthenticated() &&
               (parts[0] == request.auth.uid || parts[1] == request.auth.uid);
      }
      allow read, write: if isParticipant();
    }

    // Profile pictures
    match /profiles/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Thumbnails (generated by extensions or client)
    match /thumbnails/{allPaths=**} {
      allow read, write: if isAuthenticated();
    }
    
    // Telestrations: Screenshots with drawings
    match /telestration/{athleteId}/{fileName} {
      allow read: if isAuthenticated();
      // Allow if owner OR if they are authenticated (to unblock staff until custom claims)
      allow write: if isAuthenticated(); 
    }
    
    // Voice Notes: Audio feedback
    match /voice_notes/{athleteId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
     // Payloads (JSON data for skeletons etc)
    match /payloads/{athleteId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
  }
}
