rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function isStaff() {
      // Adjusted based on how roles are stored in token, 
      // otherwise we just allow authenticated users for now to unblock
      return request.auth.token.role == 'STAFF' || request.auth.token.role == 'ADMIN';
    }

    // Videos: Athletes can upload to their own folder, Staff can upload to any
    match /videos/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isStaff();
    }
    
    // Chat: Authenticated users can upload
    match /chat/{roomId}/{fileName} {
      allow read, write: if isAuthenticated();
    }
    
    // Profiles: User own folder
    match /profiles/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId) || isStaff();
    }
    
    // Thumbnails (generated by extensions or client)
    match /thumbnails/{allPaths=**} {
      allow read, write: if isAuthenticated();
    }
    
     // Payloads (JSON data for skeletons etc)
    match /payloads/{allPaths=**} {
      allow read, write: if isAuthenticated();
    }
  }
}
