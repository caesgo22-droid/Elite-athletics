rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Helper functions
    function isAuthenticated() {
      return request.auth != null;
    }
    
    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Videos: Athletes can upload to their own folder
    match /videos/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }

    // Chat attachments: Only participants can access
    match /chat/{roomId}/{fileName} {
      function isParticipant() {
        let parts = roomId.split('_');
        return isAuthenticated() &&
               (parts[0] == request.auth.uid || parts[1] == request.auth.uid);
      }
      allow read, write: if isParticipant();
    }

    // Profile pictures
    match /profiles/{userId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isOwner(userId);
    }
    
    // Thumbnails (generated by extensions or client)
    match /thumbnails/{allPaths=**} {
      allow read, write: if isAuthenticated();
    }
    
    // Telestrations: Screenshots with drawings - Owner can upload
    match /telestration/{athleteId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isOwner(athleteId);
    }
    
    // Voice Notes: Audio feedback - Owner can upload
    match /voice_notes/{athleteId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isOwner(athleteId);
    }
    
     // Payloads (JSON data for skeletons etc) - Owner can upload
    match /payloads/{athleteId}/{fileName} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated() && isOwner(athleteId);
    }
  }
}
